{
  "manifest_version": 3,
  "name": "Tilt AI - Amazon Shopping Assistant. Only buy from companies that align with your moral compass.",
  "version": "1.0",
  "description": "Displays the political lean of companies that make the product as you look at it on Amazon. It allow users to only support companies that allign to their moral compass. \n\nWhat way does the company Tilt?",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.de/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.it/*",
    "*://*.amazon.es/*",
    "https://wintercoder1.github.io/*",
    "https://compass-ai-internal-api.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*/dp/*",
        "*://*.amazon.com/gp/product/*",
        "*://*.amazon.co.uk/*/dp/*",
        "*://*.amazon.co.uk/gp/product/*",
        "*://*.amazon.ca/*/dp/*",
        "*://*.amazon.ca/gp/product/*"
      ],
      "js": ["React/react.js", "React/react-dom.js", "Util/ChromeGlobalVariablesAndMethods.js", "Util/ChromeRuntimeMessageListeners.js", "Util/OverlayPopupManager.js",  "Components/TiltAIHeader.js", "Components/CompassAIComponent.js", "PageParsers/typicalProductPageParser.js", "PageParsers/bookPageParser.js", "ComponentInsertionManager.js", "NetworkManager.js", "DisplayElementManager.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tilt/Compass AI Settings"
  },
  "web_accessible_resources": [
    {
      "resources": ["Components/tilt-ai-styles.css", "icons/*", "PageParsers/*", "React/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/tilt_logo@16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}